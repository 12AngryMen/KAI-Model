<options>
    <geometry>
        <numofgrains>3</numofgrains>
        <anglewindow unit="degree">45</anglewindow>
        <safetyscale>0.95</safetyscale>
        <width unit="?">1</width>
    </geometry>
    <material>
        <epsilon help="xx yy xy">5 5 5</epsilon>
        <tau>1</tau>
        <Ea>2</Ea>
        <Ps>5</Ps>
        <beta>2</beta>
    </material>
    <run>
        <voltages>0 1 2 3 4 5</voltages>
        <maxsteps>3000</maxsteps>
